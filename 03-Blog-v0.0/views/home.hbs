{{!-- Show the posts --}}
<div class="posts">
    {{#each posts as |post|}}
        <div class="blog_post_card">
            <a href="/{{post.fields.slug}}">
                <h2>{{post.fields.title}}</h2>
            <p><small>{{post.fields.date}}</small></p>

                    <img src="{{post.fields.feature_image.fields.file.url}}"
                        alt="{{post.fields.title}}"/>
                </a>
                <p>
                {{#each post.fields.tags as |tag|}}
                        <span>#{{tag}}</span>
                {{/each}}
            </p>
        </div>
    {{/each}}
</div>
<div class="more">
    <button id="more_articles" pageNo="0" >More Articles</button>
</div>
